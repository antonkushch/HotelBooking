@model HotelBooking.Models.ViewHotelViewModel
@{
    ViewBag.Title = "ViewHotel";
}

<h2>Viewing Hotel</h2>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Hotel.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2">
            @Html.DisplayFor(model => model.Hotel.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Hotel.Country, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2">
            @Html.DisplayFor(model => model.Hotel.Country, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Hotel.City, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2">
            @Html.DisplayFor(model => model.Hotel.City, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Hotel.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2">
            @Html.DisplayFor(model => model.Hotel.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Hotel.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2">
            @Html.DisplayFor(model => model.Hotel.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Hotel.RoomQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2">
            @Html.DisplayFor(model => model.Hotel.RoomQuantity, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @{
        foreach (var element in Model.Details)
        {
            <div class="form-group">
                <label class="control-label col-md-2">@element.RoomCategory.Name:</label>
                <div class="col-md-10">
                    <label style="font-weight:normal !important">@element.NumOfRooms room(s) for @element.Price UAH per night</label>
                </div>
            </div>
        }
    }

</div>

<div>
    @Html.ActionLink("Back to Hotel List", "Index")
</div>

