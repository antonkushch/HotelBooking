@model HotelBooking.Models.ViewFreeRoomsVM

@{
    ViewBag.Title = "ViewFreeRooms";
}

<h2>@Model.NumFreeRooms / @Model.NumRooms room(s) are free in @Model.Hotel.Name (@Model.Hotel.Country, @Model.Hotel.City)</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FreeRooms.ElementAt(0).RoomCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeRooms.ElementAt(0).RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeRooms.ElementAt(0).Price)
        </th>
    </tr>

    @foreach (var item in Model.FreeRooms)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
    }
</table>
