@model HotelBooking.Models.ViewBookedRoomsVM

@{
    ViewBag.Title = "ViewBookedRooms";
}

<h2>@Model.NumBookedRooms / @Model.NumRooms room(s) are booked in @Model.Hotel.Name (@Model.Hotel.Country, @Model.Hotel.City)</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).Client.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).RoomCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedRooms.ElementAt(0).TotalPrice)
        </th>
    </tr>

    @foreach (var item in Model.BookedRooms)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
    }

</table>

